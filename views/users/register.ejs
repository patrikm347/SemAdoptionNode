<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" type="text/css" href="/static/stylesheets/profile.css">
</head>
<body>
    <%- include('../partials/header') %>
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="forms col-xl-4 col-lg-5 col-md-6">
                <div>
                    <h3 class="title">Register</h3>
                </div>
                <form action='/users/register' method="POST">
                    <%= flashErrors %>
                    <%- include('_user_data_form') %>

                    <small class="validation-error"><%= errors.password %></small>
                    <div class="form-group">
                        <label for="password">Password: </label><br>
                        <input type="password" class="form-control mb-3" id="password" name="password" value="" required minlength="8">
                    </div>
                    <button type="submit" class="btn btn-primary submit-button">Register</button>
                </form>
                <small class="text-muted">Already registered? <a href="/users/login" class="already-registered">Log In here.</a></small>
            </div>
        </div>
    </div>
</body>
</html>