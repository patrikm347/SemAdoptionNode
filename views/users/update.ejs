<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" type="text/css" href="/static/stylesheets/profile.css">
</head>
<body>
    <%- include('../partials/header') %>
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="forms col-xl-4 col-lg-5 col-md-6">
                <div>
                    <h3 class="title">Update profile</h4>
                </div>
                <form action='/users/update/<%= user.id %>?_method=PUT' method="POST">
                    <%- include('_user_data_form') %>
                    <button type="submit" class="btn btn-primary submit-button">Change information</button>
                </form>
            </div>
        </div>
        <div class="delete-div">
            <a href="/users/delete/<%= user.id %>" class="btn btn-danger delete-button">Delete account</a>
        </div>
    </div>
</body>
</html>