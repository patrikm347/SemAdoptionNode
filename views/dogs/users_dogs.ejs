<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" type="text/css" href="/static/stylesheets/index.css">
</head>
<body>
    <%- include('../partials/header') %>
    <div class="container">
        <% flashSuccess.forEach(message => { %>
            <p class="success-message"><%= message %></p>
        <% }); %>
        
        <div class="text-center mt-4">
            <h4>You have put <%= dogs.length %> <%= dogs.length === 1 ? ' dog' : ' dogs' %> for adoption </h4>
        </div>
        
        <div class="row justify-content-center mt-4">
            <% dogs.forEach(dog => { %>
                <div class="col-md-5 mb-4">
                    <div class="dog-data">
                        <img src="/static/images/dogs/<%= dog.imageName %>" class="dog-image"></img>
                    </div>
                    <div class="dog-card">
                        <a href="/dogs/dog/<%= dog.id %>" class="dog-link"><%= dog.name %>, <%= dog.age %></a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <script src="/static/frontend_js/index.js"></script>
</body>
</html>